# Mkfd Environment Variables
# Copy this file to .env and fill in your values

# Required: Passkey for API authentication
PASSKEY=your_passkey_here

# Required: Cookie secret (minimum 32 characters)
COOKIE_SECRET=your_cookie_secret_here

# Required: Encryption key for storing IMAP passwords (minimum 16 characters)
ENCRYPTION_KEY=your_encryption_key_here

# Optional: Enable SSL (true/false)
SSL=false

# Optional: Override default 4GB memory allocation for IMAP processes
# Uncomment and adjust if you have large mailboxes
# NODE_OPTIONS=--max-old-space-size=8192
